<form action="{{form_target}}" method="post" id="coursereport_form">
    <div>
        <label for="shortname">{{#str}}shortname, report_coursereport{{/str}}</label>
        <input type="text" id="shortname" name="shortname" value="{{shortname_value}}" />
    </div>
    <div>
        <label for="fullname">{{#str}}fullname, report_coursereport{{/str}}</label>
        <input type="text" id="fullname" name="fullname" value="{{fullname_value}}" />
    </div>
    <div class="form-submit">
        <input type="submit" value="{{#str}}submit, report_coursereport{{/str}}" />
    </div>
</form>
