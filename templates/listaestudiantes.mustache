<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th>Username</th>
      <th>Nota</th>
      <th>Completitud</th>
    </tr>
  </thead>
  <tbody>
    {{#students}}
    <tr>
      <td>{{firstname}}</td>
      <td>{{lastname}}</td>
      <td>{{email}}</td>
      <td>{{username}}</td>
      <td>{{grade}}</td>
      <td>{{completion}}</td>
    </tr>
    {{/students}}
  </tbody>
</table>

{{^students}}
<div class="alert alert-info" role="alert">
  No hay estudiantes matriculados en este curso.
</div>
{{/students}}






